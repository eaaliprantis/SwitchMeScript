<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/modelNumBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model #: " />

        <EditText
            android:id="@+id/modelNumTextBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:minWidth="125dp"
            android:maxLength="20" />
    </LinearLayout>
 	
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    	
    	<CheckBox
	        android:id="@+id/switchNameBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Switch Name: " />
    
        <EditText
            android:id="@+id/switchNameTextBox"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:minWidth="125dp"
            android:maxLength="20" />
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <CheckBox
	        android:id="@+id/timeZoneBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="TimeZone: " />
        
	    <Button
	        android:id="@+id/timeZoneMinusButton"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textSize="30dp"
	        android:text="-" />
	    
	    <EditText
	        android:id="@+id/timeZoneTextBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0"
	        android:inputType="number|numberSigned"
	        android:maxLength="3"
	        android:clickable="false"
	        android:cursorVisible="false"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:singleLine="true"
	        android:minWidth="25dp" />
	    
	    <Button
	        android:id="@+id/timeZonePlusButton"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textSize="30dp"
	        android:text="+" />
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <CheckBox
	        android:id="@+id/gatewayAddressBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Gateway:         " />
	    
	    <EditText
	        android:id="@+id/gatewayAddressTextBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="10.155.96.1"
	        android:minWidth="135dp"
	        android:singleLine="true"
	        android:digits="0123456789." />
    
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <CheckBox
	        android:id="@+id/ipAddressBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="IP Address:     " />
	    
	    <EditText
	        android:id="@+id/ipAddressTextBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="10.155.96.15"
	        android:minWidth="135dp"
	        android:singleLine="true"
	        android:digits="0123456789." />
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <CheckBox
	        android:id="@+id/subnetMaskBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Subnet Mask: " />
    	    
	    <EditText
	        android:id="@+id/subnetMaskTextBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="255.255.252.0"
	        android:minWidth="135dp"
	        android:singleLine="true"
	        android:digits="0123456789." />
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <CheckBox
	        android:id="@+id/locationBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Location: " />
	
	    <EditText 
	        android:id="@+id/locationTextBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxLines="1"
	        android:singleLine="true"
	        android:maxLength="20"
	        android:minWidth="150dp" />
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >
        
        <Button
            android:id="@+id/clearAllButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear All" />

        <Button
            android:id="@+id/clearSelectedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear" />
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />
        
    </LinearLayout>
	
</LinearLayout>
